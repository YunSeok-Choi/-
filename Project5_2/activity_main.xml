<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TableRow>
        <EditText
            android:id="@+id/e1"
            android:layout_span="5"
            ></EditText>
        </TableRow>
    <TableRow>
         <EditText
            android:id="@+id/e2"
             android:layout_span="5"
        ></EditText>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/num0"
            android:text="0"></Button>
        <Button
            android:id="@+id/num1"
            android:text="1"></Button>
        <Button
            android:id="@+id/num2"
            android:text="2"></Button>
        <Button
            android:id="@+id/num3"
            android:text="3"></Button>
        <Button
            android:id="@+id/num4"
            android:text="4"></Button>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/num5"
            android:text="5"></Button>
        <Button
            android:id="@+id/num6"
            android:text="6"></Button>
        <Button
            android:id="@+id/num7"
            android:text="7"></Button>
        <Button
            android:id="@+id/num8"
            android:text="8"></Button>
        <Button
            android:id="@+id/num9"
            android:text="9"></Button>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/sum"
            android:text="더하기"
            android:layout_span="5"
            ></Button>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/min"
            android:text="빼기"
            android:layout_span="5"
            ></Button>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/mul"
            android:text="곱하기"
            android:layout_span="5"
            ></Button>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/dev"
            android:text="나누기"
            android:layout_span="5"
            ></Button>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/result"
            android:text="계산 결과 : "
            android:textSize="30sp"
            android:textColor="@android:color/holo_red_light"
            android:layout_span="5"
            ></TextView>
    </TableRow>
</TableLayout>